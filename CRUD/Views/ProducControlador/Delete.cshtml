@model CRUD.Models.Producto

<h2>Desactivar Producto</h2>

<h3>¿Estás seguro de que quieres desactivar este producto?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio</dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Desactivar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>